<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TabLayout application style. -->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>

    <!-- Mountain list style. -->
    <style name="style_mountains_title">
        <item name="android:textColor">#009933</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="style_mountains_infos">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Lakes list style. -->
    <style name="style_lakes_title">
        <item name="android:textColor">#0066ff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="style_lakes_infos">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Musees list style. -->
    <style name="style_musees_title">
        <item name="android:textColor">#0099ff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="style_musees_infos">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Recipes list style. -->
    <style name="style_recipes_title">
        <item name="android:textColor">#ff9900</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="style_recipes_infos">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="style_recipes_restos">
        <item name="android:textColor">#cc9900</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

    </style>
</resources>
